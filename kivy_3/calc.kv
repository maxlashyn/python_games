<CalcWidget>:
    cols: 1
    GridLayout:
        cols: 1
        size_hint: 1, 0.2

        Label:
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.5)
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: root.text
            font_size: 35
            color: 0, 0, 0, 1

    GridLayout:
        size_hint: 1, 0.1
        cols: 2

        Button:
            text: 'C'
            on_press: root.on_press_clear_button(self)
        Button:
            text: '<'
            on_press: root.on_press_clear_button(self)

    GridLayout:
        size_hint: 1, 0.7
        cols: 4

        Button:
            text: '7'
            on_press: root.on_press_number_button(self)
        Button:
            text: '8'
            on_press: root.on_press_number_button(self)
        Button:
            text: '9'
            on_press: root.on_press_number_button(self)
        Button:
            text: '+'
            on_press: root.on_press_operation_button(self)

        Button:
            text: '4'
            on_press: root.on_press_number_button(self)
        Button:
            text: '5'
            on_press: root.on_press_number_button(self)
        Button:
            text: '6'
            on_press: root.on_press_number_button(self)
        Button:
            text: '-'
            on_press: root.on_press_operation_button(self)

        Button:
            text: '1'
            on_press: root.on_press_number_button(self)
        Button:
            text: '2'
            on_press: root.on_press_number_button(self)
        Button:
            text: '3'
            on_press: root.on_press_number_button(self)
        Button:
            text: '*'
            on_press: root.on_press_operation_button(self)

        Button:
            text: '0'
            on_press: root.on_press_number_button(self)
        Button:
            text: '.'
            on_press: root.on_press_number_button(self)
        Button:
            text: '='
            on_press: root.on_press_operation_button(self)
        Button:
            text: '/'
            on_press: root.on_press_operation_button(self)
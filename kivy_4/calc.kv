<WhiteLabel>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, 0.5)
        Rectangle:
            size: self.size
            pos: self.pos

    font_size: 35
    color: 0, 0, 0, 1

<Calc>:
    cols:2
    GridLayout:
        cols: 1
        Label:
            text: root.text
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.5)
                Rectangle:
                    size: self.size[0] - 2, self.size[1] - 2
                    pos: self.pos[0] - 1, self.pos[1] - 1

            font_size: 35
            color: 0, 0, 0, 1
        WhiteLabel:
            text: root.stack4
        WhiteLabel:
            text: root.stack3
        WhiteLabel:
            text: root.stack2
        WhiteLabel:
            text: root.stack1
        WhiteLabel:
            text: root.stack0


    GridLayout:
        cols:4

        Button:
            text: 'C'
            on_press: root.on_press_clear_button(self)
        Button:
            text: '<'
            on_press: root.on_press_clear_button(self)
        Button:
            text: 'CS'
            on_press: root.on_press_clear_button(self)
        Button:
            text: 'CTS'
            on_press: root.on_press_clear_button(self)

        Button:
            text: 'swap'
            on_press: root.on_press_stack_operation(self)
        Button:
            text: 'dup'
            on_press: root.on_press_stack_operation(self)
        Button:
            text: 'rot'
            on_press: root.on_press_stack_operation(self)
        Button:
            text: '^'
            on_press: root.on_press_to_stack(self)

        Button:
            text: '7'
            on_press: root.on_press_number_button(self)
        Button:
            text: '8'
            on_press: root.on_press_number_button(self)
        Button:
            text: '9'
            on_press: root.on_press_number_button(self)
        Button:
            text: '+'
            on_press: root.on_press_operation_button(self)

        Button:
            text: '4'
            on_press: root.on_press_number_button(self)
        Button:
            text: '5'
            on_press: root.on_press_number_button(self)
        Button:
            text: '6'
            on_press: root.on_press_number_button(self)
        Button:
            text: '-'
            on_press: root.on_press_operation_button(self)

        Button:
            text: '1'
            on_press: root.on_press_number_button(self)
        Button:
            text: '2'
            on_press: root.on_press_number_button(self)
        Button:
            text: '3'
            on_press: root.on_press_number_button(self)
        Button:
            text: '*'
            on_press: root.on_press_operation_button(self)

        Button:
            text: '0'
            on_press: root.on_press_number_button(self)
        Button:
            text: '.'
            on_press: root.on_press_number_button(self)
        Button:
            text: '='
            on_press: root.on_press_equal_button(self)
        Button:
            text: '/'
            on_press: root.on_press_operation_button(self)

